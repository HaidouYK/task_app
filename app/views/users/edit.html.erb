<div class="main_container">
    <div class="information">
        <h2>スケジュール編集</h2>
    </div>

    <% if flash[:notice] %>
        <p class="error error__failure"><%= flash[:notice] %></p>
    <% end %>

    <%= render "shared/error", obj: @schedule %>

    <%= form_with(model: @schedule, url: user_path, local: true) do |f| %>
        <table>
            <tbody>
                <tr>
                    <th><%= f.label :title ,"タイトル" %></th>
                    <td><%= f.text_field :title %></td>
                </tr>
                <tr>
                    <th><%= f.label :start_date ,"開始日" %></th>
                    <td><%= f.date_field :start_date %></td>
                </tr>
                <tr>
                    <th><%= f.label :end_date ,"終了日" %></th>
                    <td><%= f.date_field :end_date %></td>
                </tr>
                <tr>
                    <th><%= f.label :all_day ,"終日" %></th>
                    <td>
                        <%= f.check_box :all_day, {}, "true", "false" %>
                        終日の場合はチェックを入れます
                    </td>
                </tr>
                <tr>
                    <th><%= f.label :memo ,"スケジュールメモ" %></th>
                    <td><%= f.text_area :memo, class: "schedules-content" %></td>
                </tr>
            </tbody>
        </table>

        <div>
            <ul>
                <li><%= f.submit "スケジュールの編集を完了する" %></li>
                <li><%= link_to "スケジュール一覧に戻る",:users %></li>
            </ul>
        </div>
    <% end %>
</div>